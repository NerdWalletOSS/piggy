{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "preserveConstEnums": false,
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true, // --noImplicitAny, --noImplicitThis, --alwaysStrict, --strictBindCallApply, --strictNullChecks, --strictFunctionTypes and --strictPropertyInitialization
    "target": "esnext", // ECMAScript target version
    "module": "esnext" // module code generation
  },
  "include": ["lib/src/**/*"]
}
